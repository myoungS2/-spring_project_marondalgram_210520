<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.marondalgram.user.dao.UserDAO">
 	<select id="existLoginId" parameterType="String" resultType="boolean">
 		SELECT
 			count(1)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	<insert id="insertUser" parameterType="Map">
 		INSERT INTO
 			`user`
 		(
 			`loginId`
			,`password`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES	
 		(
 			#{loginId}
 			,#{password}
 			, NOW()
			, NOW()
 		)
 	</insert>
 	<select id="selectUserByLoginIdAndPassword" parameterType="Map" resultType="com.marondalgram.user.model.User">
 		SELECT 
 			`id`
 			,`loginId`
			,`password`
			,`createdAt`
			,`updatedAt`
		FROM 
			`user`	
		WHERE
			`loginId` = #{loginId}
			AND `password`	= #{password}
 	</select>
 	<select id="selectUser" parameterType="int" resultType="com.marondalgram.user.model.User">
 		SELECT 
 			`id`
 			,`loginId`
			,`password`
			, `name`
			, `website`
			, `introduce`
			,`createdAt`
			,`updatedAt`
		FROM 
			`user`	
		WHERE
			`id` = #{id}
 	</select>
 	<update id="updateUser" parameterType="Map">
 		UPDATE `user`
		SET 		
			`name` = #{name}
			, `website` = #{website}
			, `introduce` = #{introduce}
			, `updatedAt` = NOW()
		WHERE
			`id` = #{id}
 	</update>
 	<select id="selectUserInfo" parameterType="int" resultType="com.marondalgram.user.model.User">
 		SELECT 
 			`id`
 			,`loginId`
			,`password`
			, `name`
			, `website`
			, `introduce`
			,`createdAt`
			,`updatedAt`
		FROM 
			`user`
		WHERE
			`id` = #{id}		
 	</select>
 </mapper>